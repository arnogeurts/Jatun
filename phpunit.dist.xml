<?xml version="1.0" encoding="UTF-8"?>

<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         bootstrap="tests/bootstrap.php"
>
    
    <testsuites>
        <testsuite name="Jatun Test Suite">
            <directory>./tests/Jatun/</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory suffix=".php">./lib/Jatun/</directory>
            <exclude>
                <directory suffix=".php">./lib/Jatun/SymfonyBundle</directory>
            </exclude>
        </whitelist>
    </filter>
</phpunit>
